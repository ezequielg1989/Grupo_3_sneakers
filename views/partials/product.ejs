<div class="box-product">
  <div class="product-top">
    <h3>
      <%- producto.nombreProd %>
    </h3>
    <button class="bottom-product">
      <a href="/<%- producto.idshoes %> ">Comprar</a>
    </button>
  </div>
  <a href="/<%- producto.idshoes %> ">
    <img src="<%- producto.imagenProd %> ">

  </a>
  <div class="btn-delete">
    <form method="POST"  action="/<%= producto.idshoes %>?_method=DELETE" enctype="multipart/form-data" >
      <input type="submit" value="Eliminar" name="delete" >
    </form> 
    <form method="GET" action="/editProd/<%= producto.idshoes %>" >
      <input type="submit" value="Editar" name="Editar">
    </form>
  </div>
  
  <p>
    <%- producto.descripcionProd %>
  </p>
</div>