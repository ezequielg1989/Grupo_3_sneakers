<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>


    <body>

        <%- include('partials/header') %>

            <main>
                <div class="formLogin">
                    <form method="POST" action="/login">

                        <div>
                            <h2>Iniciar Sesión</h2>
                            <div>
                                <input class='butoms-facebook' type='submit' value='Facebook Login'>
                                <input class='butoms-google' type='submit' value='Google Login'>
                            </div>
                            <label>email</label>
                        </div>
                        <div>
                            <input type="text" name="email" placeholder="Fulanito@gmail.com" >
                        </div>
                        <% if (locals.errors && errors.email) { %>
                            <div class="danger">
                                <%= errors.email.msg %>
                            </div>
                         <% } %>
                        <div>
                            <label>Contraseña</label>
                        </div>
                        <div>
                            <input type="password" name="password" minlength="7" maxlength="10">
                        </div>
                        <% if (locals.errors && errors.password) { %>
                            <div class="danger">
                                <%= errors.password.msg %>
                            </div>
                         <% } %>
                        <div>
                            <button type="reset" class="loginBotonTipo1">Borrar</button>
                            <button type="submit" class="loginBotonTipo1">Continuar</button>
                        </div>
                        <div>
                            <a href="./register"><button type="button" class="loginBotonTipo2">Registrarse</button></a>
                        </div>
                        <div class="terminosLogin">
                            <a href="#">Términos y condiciones</a>
                            <a href="./"> - Volver al sitio</a>
                        </div>
                    </form>
                </div>
            </main>
            <%- include('partials/footer') %>


    </body>

</html>